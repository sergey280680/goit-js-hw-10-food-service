{{#each this}}
  <li class='menu__item'>
    <article class='card'>
      <img src='{{image}}' alt='{{name}}' class='card__image' />
      <div class='card__content'>
        <h2 class='card__name'>{{name}}</h2>
        <p class='card__price'>
          <i class="fas fa-dollar-sign dollar-icon"></i>
          {{price}}
          кредитов
        </p>

        <p class='card__descr'>
          {{description}}
        </p>

        <ul class='tag-list'>
          {{#each ingredients}}
            <li class='tag-list__item'>{{this}}</li>
          {{/each}}
        </ul>
      </div>

      <button class='card__button button'>
        <i class="fas fa-cart-arrow-down  button__icon"></i>
        В корзину
      </button>
    </article>
  </li>
{{/each}}